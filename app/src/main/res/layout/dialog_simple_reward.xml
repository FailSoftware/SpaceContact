<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/simpleCoinImg"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_weight="2"
            tools:src="@drawable/credit" />

        <TextView
            android:id="@+id/simpleCoinAmmount"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="textStart"

            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/simpleFuelImg"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_weight="2"
            tools:srcCompat="@drawable/fuel"/>

        <TextView
            android:id="@+id/simpleFuelAmmount"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="textStart"

            android:textSize="22sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:paddingVertical="20dp">

        <ImageView
            android:id="@+id/simpleFoodImg"
            android:layout_width="48dp"
            android:layout_height="62dp"
            android:layout_weight="2"
            tools:srcCompat="@drawable/food" />

        <TextView
            android:id="@+id/simpleFoodAmmount"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="10"
            android:gravity="center"
            android:text="TextView"
            android:textAlignment="textStart"

            android:textSize="22sp" />

    </LinearLayout>

    <Button
        android:id="@+id/btnSimpleConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btConf" />

</LinearLayout>